{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "lib": ["es2016", "esnext.asynciterable"],
        "moduleResolution": "node",
        "outDir": "./dist",
        "strict": false,
        "strictPropertyInitialization": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true, 
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}